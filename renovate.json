{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "regexManagers": [
        {
            "fileMatch": [
                "Dockerfile"
            ],
            "matchStrings": [
                "--with github.com/(?<depName>.*?)(?:@(?<currentValue>.*?))?\\s"
            ],
            "datasourceTemplate": "github-tags",
            "versioningTemplate": "semver-coerced"
        }
    ]
}
